<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MiApp.Views.RegisterPage"
             Title="RegisterPage">
    <StackLayout Padding="20">
        <Label Text="Nombre de Usuario" FontSize="Medium" />
        <Entry x:Name="NombreUsuarioEntry" Placeholder="Ingrese su nombre de usuario" />

        <Label Text="Contraseña" FontSize="Medium" />
        <Entry x:Name="ContrasenaEntry" Placeholder="Ingrese su contraseña" IsPassword="True" />

        <Button Text="Registrar" Clicked="OnRegisterButtonClicked" />

        <Label x:Name="MensajeLabel" TextColor="Red" IsVisible="False" />
    </StackLayout>
</ContentPage>      